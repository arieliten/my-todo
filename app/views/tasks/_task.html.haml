%tr{id: "task-#{task.id}", class: row_css_class(task)}
  %td{class: sort_css_class(:title)}= task.title
  %td{class: sort_css_class(:due_at)}= task.due_at
  %td{class: sort_css_class(:priority)}= task.priority
  %td
    = link_to toggle_task_path(task), method: :put, remote: true do
      %i.icon-ok
    = link_to edit_task_path(task), remote: true do
      %i.icon-pencil
    = link_to task, method: :delete, remote: true, data: { confirm: 'Are you sure?' } do
      %i.icon-remove
